<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient android:angle="45" android:endColor="@color/app_color_grey" android:startColor="@color/app_color_grey" android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:height="50dp" android:width="270dp" />
        </shape>
    </item>

    <!-- default -->
    <item android:state_focused="false" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient android:angle="45" android:endColor="@color/app_color_green" android:startColor="@color/app_color_green" android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:height="50dp" android:width="270dp" />
        </shape>
    </item>

    <!-- button focused -->
    <item android:state_focused="true" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient android:angle="45" android:endColor="@color/app_color_green_focused" android:startColor="@color/app_color_green_focused" android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:height="50dp" android:width="270dp" />
        </shape>
    </item>

    <!-- button pressed -->
    <item android:state_focused="false" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient android:angle="45" android:endColor="@color/app_color_green_pressed" android:startColor="@color/app_color_green_pressed" android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:height="50dp" android:width="270dp" />
        </shape>
    </item>

</selector>