<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d3d3d3"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/eventDetailPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:src="@drawable/happy_birthday"
            android:padding="3dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:layout_marginBottom="5dp"
                android:background="@drawable/layout_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:weightSum="2"
                    android:layout_marginBottom="5dp"
                    android:background="@color/cardview_light_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:weightSum="5">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/event"
                                android:layout_weight="4"/>

                            <TextView
                                android:id="@+id/eventNameDetail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textSize="14dp"
                                android:gravity="center"
                                android:text="Hackathon event" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:weightSum="5"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:src="@mipmap/calendar"/>

                            <TextView
                                android:id="@+id/timeRangeDetail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="26th to 29th,September 2017"
                                android:textSize="14dp"
                                android:gravity="center"
                                android:layout_weight="1"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:weightSum="5"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:src="@mipmap/map"/>


                            <TextView
                                android:id="@+id/locationDetail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Kanaung hack"
                                android:gravity="center"
                                android:textSize="14dp"
                                android:layout_weight="1"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:weightSum="5"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:src="@mipmap/clock"/>

                        <TextView
                            android:id="@+id/duration"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="14dp"
                            android:text="9am to 6pm"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:weightSum="2"
                    android:background="@color/cardview_light_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/phoneIcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@mipmap/phone"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Call :"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/phNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="09777379355"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="3"
                android:background="@drawable/layout_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:padding="5dp">
                    
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:background="@color/app_color_white">

                        <TextView
                            android:id="@+id/eventDescription"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="A stable and happy marriage should be one between equals. Power disparities doom love. I would never have married a man who could not wipe out a company of Germanian brigands or a small army of goblins."
                            android:background="@color/cardview_light_background"
                            />
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:background="@color/cardview_light_background"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/callBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Call"
                        android:background="@drawable/shape_button_red_light"
                        android:textColor="@color/app_color_white"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"/>

                    <Button
                        android:id="@+id/ticketBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Ticket Sale"
                        android:background="@drawable/shape_button_red_light"
                        android:textColor="@color/app_color_white"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"/>

                    <Button
                        android:id="@+id/followBtn"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_button_red_light"
                        android:layout_height="match_parent"
                        android:textColor="@color/app_color_white"
                        android:text="follow"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
